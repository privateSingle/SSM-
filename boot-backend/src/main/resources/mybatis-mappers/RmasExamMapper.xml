<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zw.admin.server.dao.RmasExamDao">

	<sql id="where">
		<where>
			<if test="params.id != null and params.id != ''">
				and id = #{params.id} 
			</if>
			<if test="params.examName != null and params.examName != ''">
				and examName = #{params.examName} 
			</if>
			<if test="params.stuName != null and params.stuName != ''">
				and stuName = #{params.stuName} 
			</if>
			<if test="params.examDate != null and params.examDate != ''">
				and examDate = #{params.examDate} 
			</if>
			<if test="params.context != null and params.context != ''">
				and context = #{params.context} 
			</if>
			<if test="params.grade != null and params.grade != ''">
				and grade = #{params.grade} 
			</if>
			<if test="params.term != null and params.term != ''">
				and term = #{params.term} 
			</if>
			<if test="params.createTime != null and params.createTime != ''">
				and createTime = #{params.createTime} 
			</if>
			<if test="params.updateTime != null and params.updateTime != ''">
				and updateTime = #{params.updateTime} 
			</if>
		
		</where>
	</sql>

	<select id="count" resultType="int">
		select count(1) from rmas_exam t
		<include refid="where" />
	</select>

	<select id="list" resultType="RmasExam">
		select * from rmas_exam t
		<include refid="where" />
		${params.orderBy}
		limit #{offset}, #{limit}
	</select>

	<update id="update">
		update rmas_exam t
		<set>
			<if test="examName != null">
				examName = #{examName}, 
			</if>
			<if test="examDate != null">
				examDate = #{examDate}, 
			</if>
			<if test="context != null">
				context = #{context}, 
			</if>
			<if test="grade != null">
				grade = #{grade}, 
			</if>
			<if test="term != null">
				term = #{term}, 
			</if>
			<if test="createTime != null">
				createTime = #{createTime}, 
			</if>
			<if test="updateTime != null">
				updateTime = #{updateTime}, 
			</if>

		</set>

		where t.id = #{id}
	</update>

</mapper>
