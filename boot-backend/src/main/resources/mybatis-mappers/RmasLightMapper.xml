<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zw.admin.server.dao.RmasLightDao">

	<sql id="where">
		<where>
			<if test="params.id != null and params.id != ''">
				and id = #{params.id} 
			</if>
			<if test="params.title != null and params.title != ''">
				and title = #{params.title} 
			</if>
			<if test="params.date != null and params.date != ''">
				and date = #{params.date} 
			</if>
			<if test="params.type != null and params.type != ''">
				and type = #{params.type} 
			</if>
			<if test="params.room != null and params.room != ''">
				and room = #{params.room} 
			</if>
			<if test="params.content != null and params.content != ''">
				and content = #{params.content} 
			</if>
			<if test="params.createTime != null and params.createTime != ''">
				and createTime = #{params.createTime} 
			</if>
			<if test="params.updateTime != null and params.updateTime != ''">
				and updateTime = #{params.updateTime} 
			</if>
		
		</where>
	</sql>

	<select id="count" resultType="int">
		select count(1) from rmas_light t
		<include refid="where" />
	</select>

	<select id="list" resultType="RmasLight">
		select * from rmas_light t
		<include refid="where" />
		${params.orderBy}
		limit #{offset}, #{limit}
	</select>

	<select id="listAll" resultType="RmasLight">
		select * from rmas_light t
	</select>

	<update id="update">
		update rmas_light t
		<set>
			<if test="title != null">
				title = #{title}, 
			</if>
			<if test="date != null">
				date = #{date}, 
			</if>
			<if test="type != null">
				type = #{type}, 
			</if>
			<if test="room != null">
				room = #{room}, 
			</if>
			<if test="content != null">
				content = #{content}, 
			</if>
			<if test="createTime != null">
				createTime = #{createTime}, 
			</if>
			<if test="updateTime != null">
				updateTime = #{updateTime}, 
			</if>

		</set>

		where t.id = #{id}
	</update>

</mapper>
