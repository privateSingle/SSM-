<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zw.admin.server.dao.RmasRoomDao">

	<sql id="where">
		<where>
			<if test="params.id != null and params.id != ''">
				and id = #{params.id} 
			</if>
			<if test="params.title != null and params.title != ''">
				and title = #{params.title} 
			</if>
			<if test="params.floor != null and params.floor != ''">
				and floor = #{params.floor} 
			</if>
			<if test="params.door != null and params.door != ''">
				and door = #{params.door} 
			</if>
			<if test="params.num != null and params.num != ''">
				and num = #{params.num} 
			</if>
			<if test="params.content != null and params.content != ''">
				and content = #{params.content} 
			</if>
			<if test="params.createTime != null and params.createTime != ''">
				and createTime = #{params.createTime} 
			</if>
			<if test="params.updateTime != null and params.updateTime != ''">
				and updateTime = #{params.updateTime} 
			</if>
		
		</where>
	</sql>

	<select id="count" resultType="int">
		select count(1) from rmas_room t
		<include refid="where" />
	</select>

	<select id="list" resultType="RmasRoom">
		select * from rmas_room t
		<include refid="where" />
		${params.orderBy}
		limit #{offset}, #{limit}
	</select>

	<update id="update">
		update rmas_room t
		<set>
			<if test="title != null">
				title = #{title}, 
			</if>
			<if test="floor != null">
				floor = #{floor}, 
			</if>
			<if test="door != null">
				door = #{door}, 
			</if>
			<if test="num != null">
				num = #{num}, 
			</if>
			<if test="content != null">
				content = #{content}, 
			</if>
			<if test="createTime != null">
				createTime = #{createTime}, 
			</if>
			<if test="updateTime != null">
				updateTime = #{updateTime}, 
			</if>

		</set>

		where t.id = #{id}
	</update>

</mapper>
