<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zw.admin.server.dao.RmasSheshiDao">

	<sql id="where">
		<where>
			<if test="params.id != null and params.id != ''">
				and id = #{params.id} 
			</if>
			<if test="params.title != null and params.title != ''">
				and title = #{params.title} 
			</if>
			<if test="params.bxDate != null and params.bxDate != ''">
				and bxDate = #{params.bxDate} 
			</if>
			<if test="params.bxUser != null and params.bxUser != ''">
				and bxUser = #{params.bxUser} 
			</if>
			<if test="params.tell != null and params.tell != ''">
				and tell = #{params.tell} 
			</if>
			<if test="params.content != null and params.content != ''">
				and content = #{params.content} 
			</if>
			<if test="params.createTime != null and params.createTime != ''">
				and createTime = #{params.createTime} 
			</if>
			<if test="params.updateTime != null and params.updateTime != ''">
				and updateTime = #{params.updateTime} 
			</if>
		
		</where>
	</sql>

	<select id="count" resultType="int">
		select count(1) from rmas_sheshi t
		<include refid="where" />
	</select>

	<select id="list" resultType="RmasSheshi">
		select * from rmas_sheshi t
		<include refid="where" />
		${params.orderBy}
		limit #{offset}, #{limit}
	</select>

	<update id="update">
		update rmas_sheshi t
		<set>
			<if test="title != null">
				title = #{title}, 
			</if>
			<if test="bxDate != null">
				bxDate = #{bxDate}, 
			</if>
			<if test="bxUser != null">
				bxUser = #{bxUser}, 
			</if>
			<if test="tell != null">
				tell = #{tell}, 
			</if>
			<if test="content != null">
				content = #{content}, 
			</if>
			<if test="createTime != null">
				createTime = #{createTime}, 
			</if>
			<if test="updateTime != null">
				updateTime = #{updateTime}, 
			</if>

		</set>

		where t.id = #{id}
	</update>

</mapper>
