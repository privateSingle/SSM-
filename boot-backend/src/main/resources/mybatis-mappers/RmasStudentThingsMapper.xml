<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zw.admin.server.dao.RmasStudentThingsDao">

	<sql id="where">
		<where>
			<if test="params.id != null and params.id != ''">
				and id = #{params.id} 
			</if>
			<if test="params.title != null and params.title != ''">
				and title = #{params.title} 
			</if>
			<if test="params.context != null and params.context != ''">
				and context = #{params.context} 
			</if>
			<if test="params.stuName != null and params.stuName != ''">
				and stuName = #{params.stuName} 
			</if>
			<if test="params.birthday != null and params.birthday != ''">
				and birthday = #{params.birthday} 
			</if>
			<if test="params.imgUrl != null and params.imgUrl != ''">
				and imgUrl = #{params.imgUrl} 
			</if>
			<if test="params.createTime != null and params.createTime != ''">
				and createTime = #{params.createTime} 
			</if>
			<if test="params.updateTime != null and params.updateTime != ''">
				and updateTime = #{params.updateTime} 
			</if>
		
		</where>
	</sql>

	<select id="count" resultType="int">
		select count(1) from rmas_student_things t
		<include refid="where" />
	</select>

	<select id="list" resultType="RmasStudentThings">
		select * from rmas_student_things t
		<include refid="where" />
		${params.orderBy}
		limit #{offset}, #{limit}
	</select>

	<update id="update">
		update rmas_student_things t
		<set>
			<if test="title != null">
				title = #{title}, 
			</if>
			<if test="context != null">
				context = #{context}, 
			</if>
			<if test="stuName != null">
				stuName = #{stuName}, 
			</if>
			<if test="birthday != null">
				birthday = #{birthday}, 
			</if>
			<if test="imgUrl != null">
				imgUrl = #{imgUrl}, 
			</if>
			<if test="createTime != null">
				createTime = #{createTime}, 
			</if>
			<if test="updateTime != null">
				updateTime = #{updateTime}, 
			</if>

		</set>

		where t.id = #{id}
	</update>

</mapper>
