<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zw.admin.server.dao.WzapplyDao">

	<sql id="where">
		<where>
			<if test="params.id != null and params.id != ''">
				and id = #{params.id} 
			</if>
			<if test="params.wztype != null and params.wztype != ''">
				and wztype = #{params.wztype} 
			</if>
			<if test="params.wzaddress != null and params.wzaddress != ''">
				and wzaddress = #{params.wzaddress} 
			</if>
			<if test="params.wzprice != null and params.wzprice != ''">
				and wzprice = #{params.wzprice} 
			</if>
			<if test="params.wzbigprice != null and params.wzbigprice != ''">
				and wzbigprice = #{params.wzbigprice} 
			</if>
			<if test="params.wznum != null and params.wznum != ''">
				and wznum = #{params.wznum} 
			</if>
		
		</where>
	</sql>

	<select id="count" resultType="int">
		select count(1) from wzapply t
		<include refid="where" />
	</select>

	<select id="list" resultType="Wzapply">
		select * from wzapply t
		<include refid="where" />
		${params.orderBy}
		limit #{offset}, #{limit}
	</select>

	<update id="update">
		update wzapply t
		<set>
			<if test="wztype != null">
				wztype = #{wztype}, 
			</if>
			<if test="wzaddress != null">
				wzaddress = #{wzaddress}, 
			</if>
			<if test="wzprice != null">
				wzprice = #{wzprice}, 
			</if>
			<if test="wzbigprice != null">
				wzbigprice = #{wzbigprice}, 
			</if>
			<if test="wznum != null">
				wznum = #{wznum}, 
			</if>

		</set>

		where t.id = #{id}
	</update>

</mapper>
